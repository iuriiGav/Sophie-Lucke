        include ./includes/_nav-general.pug
        img.full-width(src='/../img/sophie-cover-pictures/pages-medium-minified.jpg' alt='Sophie gives master-class')
        .grid-container-12-col.background--dark.text-center
            h2.section-header.section-header--light.extra-margins WATCH AND LISTEN
            - const performers1 = ['Barbara Höfling, Sopran', 'Helios Quartet', 'Sophie Lücke, Kontrabass']
            - const performers2 = ['Markus Elsner, Dirigent', 'Thérèse Wincent, Soprano', 'Peter Schöne, Baritone', 'Ensemble Zeitsprung']
            
            +cd-homepage('/img/cd-1-front-minified.jpg', 
                        'cd-cover-image', 
                        '/img/cd-1-back-minified.jpg', 
                        'back of CD cover', 
                        '/img/cd-1-front-minified.jpg', 
                        'front of CD cover displaying soloist walking in a prak', 
                        'DES TODES TOD', 
                        'Werke von Gustav Mahler, Modest Mussorgsky und Paul Hindemith', 
                        performers1, 
                        '2014, Hannover', 
                        'https://www.amazon.de/Todes-Tod-Liederzyklen-Barbara-H%C3%B6fling/dp/B00UW6AFFC')
            +cd-homepage('/img/cd-2-front-minified.jpg', 
                        'cd-cover-image', 
                        '/img/cd-2-back-minified.jpg', 
                        'back of CD cover', 
                        '/img/cd-2-front-minified.jpg', 
                        'front of CD cover abstract image', 
                        'Johannes X. Schachtner', 
                        'Works For Ensemble', 
                        performers2, 
                        '2016, München', 
                        'https://www.amazon.de/Works-Ensemble-Zeitsprung/dp/B01J2K34R4')
            .youtube-feature__container--records-page
                h3.youtube-feature__header In Memory of my great Teacher
                h2.youtube-feature__subheader Rinat Ibragimov<br>(1960-2020)
                p.youtube-feature__text Thankful for ever.
